{
  "env": {
    "browser": true, // 브라우저 환경을 의미, 브우에서 사용 가능한 전역 변수들을 자동으로 인식
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": 0, // React 컴포넌트를 사용할 때, JSX 범위 내에서 import React from 'react'를 해야하는 규칙을 비활성화
    "react/jsx-uses-react": 0, // JSX를 사용할 때, React 변수를 사용하지 않아도 되는 규칙을 비활성화, 위와 비슷한 동작.
    "no-unused-vars": "warn",
    "no-empty": "warn"
  }
}